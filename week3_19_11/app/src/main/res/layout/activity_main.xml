<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nhập tên môn"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnNhap"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/btnNhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập"
        app:layout_constraintTop_toTopOf="@id/editText1"
        app:layout_constraintBottom_toBottomOf="@id/editText1"
        app:layout_constraintEnd_toStartOf="@id/btnCapNhat"
        app:layout_constraintHorizontal_chainStyle="packed" />


    <Button
        android:id="@+id/btnCapNhat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cập nhật"
        app:layout_constraintTop_toTopOf="@id/editText1"
        app:layout_constraintBottom_toBottomOf="@id/editText1"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- GridView hiển thị danh sách 3 cột -->
    <GridView
        android:id="@+id/gridview1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:numColumns="3"
        android:verticalSpacing="8dp"
        android:horizontalSpacing="8dp"
        app:layout_constraintTop_toBottomOf="@id/editText1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
