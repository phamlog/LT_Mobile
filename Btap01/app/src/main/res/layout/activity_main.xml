<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Avatar -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/z4282627664966_13d8dacf7e5e04b1f7a09ca173cba4b8"
        android:scaleType="centerCrop"
        android:contentDescription="@string/avatar_desc"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- Tên -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đinh Quốc Đạt"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- MSSV -->
    <TextView
        android:id="@+id/tvMssv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MSSV: 23162016"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- Nhập mảng số -->
    <EditText
        android:id="@+id/edtNumbers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nhập các số (cách nhau bằng dấu phẩy/khoảng trắng)"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tvMssv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnProcessNumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xử lý số"
        app:layout_constraintTop_toBottomOf="@id/edtNumbers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Nhập chuỗi -->
    <EditText
        android:id="@+id/edtString"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nhập chuỗi (ví dụ: I LOVE YOU)"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/btnProcessNumbers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnReverseString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đảo chuỗi"
        app:layout_constraintTop_toBottomOf="@id/edtString"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Kết quả -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kết quả sẽ hiển thị ở đây"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btnReverseString"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
